@model WebProducts.Models.Product
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <h2>Crear Nuevo Producto</h2>
    @using (Html.BeginForm("Create", "Product", FormMethod.Post))
    {
        <div>
            @Html.LabelFor(model => model.Category)
            @Html.EditorFor(model => model.Category)
            @Html.ValidationMessageFor(model => model.Category)
        </div>
        <div>
            @Html.LabelFor(model => model.ProductName)
            @Html.EditorFor(model => model.ProductName)
            @Html.ValidationMessageFor(model => model.ProductName)
        </div>
        <div>
            @Html.LabelFor(model => model.Description)
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div>
            @Html.LabelFor(model => model.AvailableDate)
            @Html.EditorFor(model => model.AvailableDate)
            @Html.ValidationMessageFor(model => model.AvailableDate)
        </div>
        <p>
            <input type="submit" name="Create" value="Create" />
        </p>
    }
    @Html.ActionLink("Volver al Index","Index","Product")
</body>
</html>
